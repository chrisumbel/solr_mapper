require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('solr_mapper', '0.1.0') do |p|
  p.description    = "Object Document Mapper for the Apache Foundation's Solr search platform"
  p.url            = "http://github.com/chrisumbel/solr_mapper.git"
  p.author         = "Chris Umbel"
  p.email          = "chris@chrisumbel.com"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.runtime_dependencies = ['rest-client', 'uuid', 'will_paginate']
  p.development_dependencies = []
end